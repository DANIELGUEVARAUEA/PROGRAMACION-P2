def ingresar_temperaturas():
    
    temperaturas = []
    dias = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"]     #se solicita las temperaturas diarias

    for dia in dias:
        temp = float(input(f"Ingrese la temperatura del {dia}: "))
        temperaturas.append(temp)

    return temperaturas


def calcular_promedio(temperaturas):
   
    return sum(temperaturas) / len(temperaturas)    #calculo del promedio


def main():
    temperaturas = ingresar_temperaturas()
    promedio = calcular_promedio(temperaturas)
    print(f"\nEl promedio semanal de temperatura es: {promedio:.2f}°C")


# Ejecución del programa
main()
